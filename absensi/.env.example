# Configuration for different environments

# Development Database
DB_HOST_DEV=localhost
DB_USER_DEV=root
DB_PASSWORD_DEV=
DB_NAME_DEV=insightflow

# Production Database
DB_HOST_PROD=your_production_host
DB_USER_PROD=your_production_user
DB_PASSWORD_PROD=your_production_password
DB_NAME_PROD=insightflow_prod

# Current Environment (dev/prod)
ENVIRONMENT=dev

# App Configuration
DATASET_PATH=./datasets
MODELS_PATH=./models
TEMP_PATH=./temp
CAMERA_INDEX=0

# Face Recognition Settings
RECOGNITION_THRESHOLD=0.6
MIN_CONFIDENCE=0.4
FACE_DETECTION_MODEL=hog  # hog or cnn
FACE_ENCODING_MODEL=large  # small or large

# Training Configuration
TRAINING_EPOCHS=100
BATCH_SIZE=32
LEARNING_RATE=0.001
AUTO_TRAIN_AFTER_CAPTURE=true

# Security Settings
SESSION_TIMEOUT=3600  # seconds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
ENABLE_FACE_LOG=true

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Performance Settings
FACE_DETECTION_SCALE=0.5
RECOGNITION_FREQUENCY=1  # seconds between recognition attempts
