# ===============================================
# DATABASE CONFIGURATION
# ===============================================
DATABASE_URL=postgresql://username:password@localhost:5432/absensi_db
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=60000

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================
NODE_ENV=development
APP_PORT=5001
PORT=5001 # optional fallback, code prefers APP_PORT
APP_NAME=Sistem Absensi
APP_VERSION=1.0.0
BASE_URL=http://localhost:5001
API_PREFIX=/api
TIMEZONE=Asia/Jakarta

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
JWT_SECRET=your-super-secret-jwt-key-here
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ===============================================
# FACE RECOGNITION SETTINGS
# (Menggantikan SystemSettings table)
# ===============================================
MAX_FACE_DATASETS=5
MIN_CONFIDENCE_SCORE=0.8
IMAGE_QUALITY_THRESHOLD=0.7
MAX_IMAGE_SIZE_MB=5

# ===============================================
# ATTENDANCE SETTINGS
# ===============================================
LATE_THRESHOLD_MINUTES=15
QR_CODE_EXPIRE_MINUTES=5
AUTO_CLOSE_ATTENDANCE_HOURS=2
MIN_ATTENDANCE_PERCENTAGE=75
EARLY_CHECKIN_MINUTES=30

# ===============================================
# DOOR ACCESS SETTINGS
# ===============================================
MAX_FAILED_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30
ACCESS_LOG_RETENTION_DAYS=90
EMERGENCY_ACCESS_CODE=EMERGENCY123
ADMIN_OVERRIDE_ENABLED=true

# ===============================================
# NOTIFICATION SETTINGS
# ===============================================
REMINDER_BEFORE_CLASS_MINUTES=15
LOW_ATTENDANCE_THRESHOLD=75
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3

# ===============================================
# FILE UPLOAD SETTINGS
# ===============================================
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf
UPLOAD_PATH=./public/uploads
PROFILE_PICTURE_PATH=./public/images/profiles
FACE_DATASET_PATH=./public/uploads/faces

# ===============================================
# LOGGING CONFIGURATION
# (Menggantikan SystemLogs table)
# ===============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
MAX_LOG_FILE_SIZE=10485760
MAX_LOG_FILES=10

# ===============================================
# BACKUP SETTINGS
# ===============================================
BACKUP_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# ===============================================
# EMAIL CONFIGURATION (Opsional)
# ===============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
DEBUG=true
ENABLE_CORS=true
CLIENT_ORIGIN=http://localhost:3001
CORS_ORIGIN=http://localhost:3001
